	{ name: "Moncler", area: 'USA'},
	{ name: "PRADA", area: 'Paris'},
	{ name: "GUCCI", area: 'China'},
	{ name: "MIU MIU", area: 'UK'},
	{ name: "FENDI", area: 'Paris'},
	{ name: "Emporio Armani", area: 'Canada'},
	{ name: "Loro Piana", area: 'Paris'},
